= simple_form_for @tipp do |f|
  = f.hidden_field :user_id
  = f.hidden_field :game_id
  %table.text-center
    %thead
      %tr
        %th{ colspan: 3 }
          = @tipp.game.start_time.strftime('%d.%m - %H:%M Uhr')
      %tr
        %th= @tipp.game.team_home
        %th :
        %th= @tipp.game.team_visitor
    %tbody
      %tr
        %td= f.input_field :tipp_home, as: :tel
        %td :
        %td= f.input_field :tipp_visitor, as: :tel
  
  = f.submit 'Save', class: 'button'
