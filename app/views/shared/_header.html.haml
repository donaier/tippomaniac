%header
  .slidin-content
    .slide-in
      - if current_user
        .row
          .columns.large-3.small-6
            = link_to 'rangliste', scoreboard_path, class: 'button'
          .columns.large-3.small-6
            = link_to 'meine tipps', user_path(current_user), class: 'button'
      
          .columns.large-3.small-6
            = link_to 'finaltipp', edit_user_path(current_user), class: 'button'
          .columns.large-3.small-6
            = link_to 'logout', destroy_user_session_path, method: :delete, class: 'button'
      - else
        .row
          .columns
            = link_to 'anmelden', new_user_session_path, class: 'button'
            = link_to 'registrieren', new_user_registration_path, class: 'button'
  

      - if current_admin
        = current_admin.email
        = link_to 'logout', destroy_admin_session_path, method: :delete, class: 'button'

    .handle
      %h1 tippomaniac
    = link_to '', root_path, class: 'home-link'
